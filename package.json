{
  "name": "launchkey-mini-mk4-gui",
  "version": "1.0.0",
  "description": "Electron GUI for Novation Launchkey Mini MK4",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "vite",
    "electron:build": "tsc && vite build && electron-builder"
  },
  "dependencies": {
    "@julusian/midi": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.launchkey.mini.mk4",
    "productName": "Launchkey Mini MK4",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.music",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Audio"
    }
  }
}
